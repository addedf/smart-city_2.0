<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/def"
    android:orientation="vertical"
    tools:context=".service.pethospital.HospitalinquiryActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:background="@color/purple_200"
        android:layout_height="@dimen/toolbar">
        <ImageView
            android:id="@+id/ic_back"
            android:src="@drawable/ic_back"
            android:layout_width="@dimen/back"
            android:layout_height="@dimen/back"
            android:layout_margin="@dimen/margin">
        </ImageView>
        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:text="医生问诊"
            android:textSize="@dimen/title"
            android:padding="@dimen/margin"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </TextView>
    </FrameLayout>

    <!--

    页面显示医生头像、医生姓名、医生职称、执业编
号、问题描述多文本输入框、图片和提交按钮，点击提交按钮时弹出
提交结果提示，提交成功后跳转至主页面
    -->

    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/avatar"
        android:layout_width="match_parent"
        android:layout_height="200dp">
    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/defaul_bg"
        android:layout_margin="@dimen/margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="医生姓名"
                android:padding="@dimen/margin"
                android:textSize="@dimen/title"
                android:textColor="@color/black">
            </TextView>

            <TextView
                android:id="@+id/name"
                android:gravity="right"
                android:layout_width="match_parent"
                android:padding="@dimen/margin"
                android:textSize="@dimen/title"
                android:textColor="@color/black"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="医生职称"
                android:padding="@dimen/margin"
                android:textSize="@dimen/title"
                android:textColor="@color/black">
            </TextView>

            <TextView
                android:gravity="right"
                android:id="@+id/jobName"
                android:layout_width="match_parent"
                android:padding="@dimen/margin"
                android:textSize="@dimen/title"
                android:textColor="@color/black"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="执业编号"
                android:padding="@dimen/margin"
                android:textSize="@dimen/title"
                android:textColor="@color/black">
            </TextView>

            <TextView
                android:gravity="right"
                android:id="@+id/practiceNo"
                android:layout_width="match_parent"
                android:padding="@dimen/margin"
                android:textSize="@dimen/title"
                android:textColor="@color/black"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="问题描述"
                android:padding="@dimen/margin"
                android:textSize="@dimen/title"
                android:textColor="@color/black">
            </TextView>

            <EditText
                android:gravity="center"
                android:id="@+id/Question"
                android:hint="请输入你的问题"
                android:background="@drawable/l_yuan_white"
                android:layout_width="match_parent"
                android:padding="@dimen/margin"
                android:textSize="@dimen/title"
                android:textColor="@color/black"
                android:layout_height="wrap_content">
            </EditText>
        </LinearLayout>

        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:text="提交"
            android:id="@+id/submit"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_shape"
            android:padding="@dimen/margin"
            android:layout_marginHorizontal="10dp"
            >
        </TextView>
    </LinearLayout>
</LinearLayout>