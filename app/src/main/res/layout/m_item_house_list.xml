<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="@dimen/eight">
    <ImageView
        android:layout_width="120dp"
        android:layout_height="67dp"
        android:scaleType="centerCrop"
        android:src="@drawable/fu_img4"
        android:background="@drawable/defaul_bg"
        android:id="@+id/m_item_house_list_pic"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/h1"
        android:textColor="@color/h1color"
        android:layout_toRightOf="@+id/m_item_house_list_pic"
        android:layout_marginStart="@dimen/eight"
        android:maxLength="14"
        android:id="@+id/m_item_house_list_sourceName"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/h3"
        android:textColor="@color/red"
        android:layout_alignParentRight="true"
        android:id="@+id/m_item_house_list_price"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/h2"
        android:textColor="@color/h2color"
        android:layout_below="@+id/m_item_house_list_sourceName"
        android:layout_toRightOf="@+id/m_item_house_list_pic"
        android:layout_marginStart="@dimen/eight"
        android:id="@+id/m_item_house_list_address"/>
</RelativeLayout>