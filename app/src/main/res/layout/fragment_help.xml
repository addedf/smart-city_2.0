<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/def"
    android:orientation="vertical"
    tools:context=".Fragment.HelpFragment">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar"
        android:background="@color/purple_200">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="精准扶贫"
            android:textColor="@color/white"
            android:textSize="@dimen/title" />
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/help_banner"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/layout_marginVertical"
                android:layout_marginVertical="@dimen/margin"
                android:text="扶贫帮助"
                android:textColor="@color/h1color"
                android:textSize="@dimen/h1" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:paddingHorizontal="@dimen/margin">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginHorizontal="@dimen/margin">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="67dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/fu_img4" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="收到求助"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="点击查看"
                            android:textColor="@color/white" />
                    </LinearLayout>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginHorizontal="@dimen/margin">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="67dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/fu_img5" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="入户走访"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="点击查看"
                            android:textColor="@color/white" />
                    </LinearLayout>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginHorizontal="@dimen/margin">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="67dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/fu_img6" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="案例发布"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="点击查看"
                            android:textColor="@color/white" />
                    </LinearLayout>
                </FrameLayout>
            </GridLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/layout_marginVertical"
                android:layout_marginVertical="@dimen/margin"
                android:text="村情村貌"
                android:textColor="@color/h1color"
                android:textSize="@dimen/h1" />
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:paddingHorizontal="@dimen/margin">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginRight="@dimen/margin"
                       android:orientation="vertical">
                       <ImageView
                           android:layout_width="120dp"
                           android:layout_height="67dp"
                           android:scaleType="centerCrop"
                           android:src="@drawable/fu_img"/>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="小岗村书记探访居民"
                           android:textSize="@dimen/h2"
                           android:layout_marginTop="@dimen/margin"
                           android:textColor="@color/h1color"/>
                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginRight="@dimen/margin"
                       android:orientation="vertical">
                       <ImageView
                           android:layout_width="120dp"
                           android:layout_height="67dp"
                           android:scaleType="centerCrop"
                           android:src="@drawable/fu_img02"/>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="走出大山发展小农经济"
                           android:textSize="@dimen/h2"
                           android:layout_marginTop="@dimen/margin"
                           android:textColor="@color/h1color"/>
                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginRight="@dimen/margin"
                       android:orientation="vertical">
                       <ImageView
                           android:layout_width="120dp"
                           android:layout_height="67dp"
                           android:scaleType="centerCrop"
                           android:src="@drawable/fu_img4"/>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="乡村淳朴风貌"
                           android:textSize="@dimen/h2"
                           android:layout_marginTop="@dimen/margin"
                           android:textColor="@color/h1color"/>
                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginRight="@dimen/margin"
                       android:orientation="vertical">
                       <ImageView
                           android:layout_width="120dp"
                           android:layout_height="67dp"
                           android:scaleType="centerCrop"
                           android:src="@drawable/fu_img5"/>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="云南山脚下的村落"
                           android:textSize="@dimen/h2"
                           android:layout_marginTop="@dimen/margin"
                           android:textColor="@color/h1color"/>
                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginRight="@dimen/margin"
                       android:orientation="vertical">
                       <ImageView
                           android:layout_width="120dp"
                           android:layout_height="67dp"
                           android:scaleType="centerCrop"
                           android:src="@drawable/fu_img6"/>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="真好看呀"
                           android:textSize="@dimen/h2"
                           android:layout_marginTop="@dimen/margin"
                           android:textColor="@color/h1color"/>
                   </LinearLayout>
               </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/layout_marginVertical"
                android:layout_marginVertical="@dimen/margin"
                android:text="扶贫案例"
                android:textColor="@color/h1color"
                android:textSize="@dimen/h1" />
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/layout_marginVertical"
                        android:layout_marginVertical="@dimen/margin">
                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="67dp"
                            android:src="@drawable/fu_img6"
                            android:scaleType="centerCrop"
                            android:id="@+id/help_1"
                            android:layout_marginRight="@dimen/margin"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="农村脱贫走向小康"
                            android:layout_toRightOf="@id/help_1"
                            android:id="@+id/help_text_1"
                            android:textColor="@color/h1color"
                            android:textSize="@dimen/h1"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/h2"
                            android:textColor="@color/h2color"
                            android:layout_marginTop="5dp"
                            android:id="@+id/help_text_h2_1"
                            android:text="检查发展农村经济带领农民致富"
                            android:layout_toRightOf="@id/help_1"
                            android:layout_below="@+id/help_text_1"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/h2"
                            android:textColor="@color/h2color"
                            android:layout_marginTop="5dp"
                            android:text="点赞：999"
                            android:layout_toRightOf="@id/help_1"
                            android:layout_below="@+id/help_text_h2_1"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/layout_marginVertical"
                        android:layout_marginVertical="@dimen/margin">
                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="67dp"
                            android:src="@drawable/fu_img6"
                            android:scaleType="centerCrop"
                            android:id="@+id/help_2"
                            android:layout_marginRight="@dimen/margin"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="农村脱贫走向小康"
                            android:layout_toRightOf="@id/help_2"
                            android:id="@+id/help_text_2"
                            android:textColor="@color/h1color"
                            android:textSize="@dimen/h1"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/h2"
                            android:textColor="@color/h2color"
                            android:layout_marginTop="5dp"
                            android:id="@+id/help_text_h2_2"
                            android:text="检查发展农村经济带领农民致富"
                            android:layout_toRightOf="@id/help_2"
                            android:layout_below="@+id/help_text_2"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/h2"
                            android:textColor="@color/h2color"
                            android:layout_marginTop="5dp"
                            android:text="点赞：999"
                            android:layout_toRightOf="@id/help_2"
                            android:layout_below="@+id/help_text_h2_2"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/layout_marginVertical"
                        android:layout_marginVertical="@dimen/margin">
                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="67dp"
                            android:src="@drawable/fu_img6"
                            android:scaleType="centerCrop"
                            android:id="@+id/help_3"
                            android:layout_marginRight="@dimen/margin"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="农村脱贫走向小康"
                            android:layout_toRightOf="@id/help_3"
                            android:id="@+id/help_text_3"
                            android:textColor="@color/h1color"
                            android:textSize="@dimen/h1"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/h2"
                            android:textColor="@color/h2color"
                            android:layout_marginTop="5dp"
                            android:id="@+id/help_text_h2_3"
                            android:text="检查发展农村经济带领农民致富"
                            android:layout_toRightOf="@id/help_3"
                            android:layout_below="@+id/help_text_3"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/h2"
                            android:textColor="@color/h2color"
                            android:layout_marginTop="5dp"
                            android:text="点赞：999"
                            android:layout_toRightOf="@id/help_3"
                            android:layout_below="@+id/help_text_h2_3"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/layout_marginVertical"
                        android:layout_marginVertical="@dimen/margin">
                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="67dp"
                            android:src="@drawable/fu_img6"
                            android:scaleType="centerCrop"
                            android:id="@+id/help_4"
                            android:layout_marginRight="@dimen/margin"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="农村脱贫走向小康"
                            android:layout_toRightOf="@id/help_4"
                            android:id="@+id/help_text_4"
                            android:textColor="@color/h1color"
                            android:textSize="@dimen/h1"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/h2"
                            android:textColor="@color/h2color"
                            android:layout_marginTop="5dp"
                            android:id="@+id/help_text_h2_4"
                            android:text="检查发展农村经济带领农民致富"
                            android:layout_toRightOf="@id/help_4"
                            android:layout_below="@+id/help_text_4"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/h2"
                            android:textColor="@color/h2color"
                            android:layout_marginTop="5dp"
                            android:text="点赞：999"
                            android:layout_toRightOf="@id/help_4"
                            android:layout_below="@+id/help_text_h2_4"/>
                    </RelativeLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>